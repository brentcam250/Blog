<h1>Articles Tagged with <%=@tag.name %></h1>

<ul>
    <% @tag.articles.each do |article| %>
        <li><%= link_to article.title, article_path(article) %>
            <% if logged_in? %>
                <%= link_to "Delete", tag_path(@tag), method: :delete, :id @tag.id, data: {confirm: "Really delete the tag?"} %>
            <% end %>
        
        </li> 

    <% end %>
</ul>